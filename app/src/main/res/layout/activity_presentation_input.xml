<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.minyook.overnight.ui.mainscrean.AnimatedWaveView
                android:id="@+id/header_wave_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/top_spacer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="24dp"
                android:background="@drawable/mypage_card_border"
                app:layout_constraintTop_toBottomOf="@id/top_spacer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팀 정보"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@color/purple_700"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@drawable/ic_group"  app:startIconTint="@color/black"
                    android:layout_marginBottom="24dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_team_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="팀 이름 또는 멤버"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/light_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="발표 주제"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="none"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@drawable/ic_topic"  app:startIconTint="@color/black"
                    app:boxStrokeColor="@color/light_purple_40"
                    android:layout_marginBottom="32dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_presentation_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="발표 제목"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/light_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="발표 항목 및 비중"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17sp"/>
                    <Button
                        android:id="@+id/btn_add_criterion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 항목 추가"
                        android:backgroundTint="@color/light_purple"
                        android:textColor="@android:color/black"
                        android:paddingHorizontal="16dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        app:cornerRadius="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_criteria_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">
                    <include layout="@layout/item_criterion" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_save_criteria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="발표 기준 저장하기"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="32dp"
                android:paddingVertical="16dp"
                android:backgroundTint="@color/black" android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>