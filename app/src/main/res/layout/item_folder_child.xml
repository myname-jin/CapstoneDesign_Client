<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_child_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_topic"
            app:tint="@color/light_purple"
            android:layout_marginEnd="16dp" /> <TextView
        android:id="@+id/tv_child_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="하위 폴더 (예: 글로벌)"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="0dp"/> </LinearLayout>
</androidx.cardview.widget.CardView>