<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/criterion_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/mypage_card_border"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_criterion_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="항목 1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/btn_remove_criterion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/black"
            android:contentDescription="항목 제거" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="항목명"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/et_criterion_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="예: 내용 전달력"
        android:backgroundTint="@color/purple_700"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/et_criterion_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="세부 내용"
        android:backgroundTint="@color/purple_700"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점수 (비중)"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/et_criterion_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="예: 30"
        android:backgroundTint="@color/purple_700"
        android:textColor="@color/black"/>

</LinearLayout>